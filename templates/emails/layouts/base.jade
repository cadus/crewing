doctype html

html(lang='en')

   head
      meta(charset='utf-8')
      meta(name='viewport', content='initial-scale=1,width=device-width')
      title= subject
      meta(property='og:title', content=subject)
      include styles

   body(leftmargin='0', marginwidth='0', topmargin='0', marginheight='0', offset='0')
      center
         table#background(border='0', cellpadding='0', cellspacing='0', height='100%', width='100%')
            tr
               td#populate-container(valign='top', align='center')
                  table#populate(align='center', width=660, border=0, cellpadding=0, cellspacing=0)

                     //- Template Header
                     tr: td(valign='middle')#header
                        #header-brand: a(href=host): img(src='#{host}/images/logo-small.png', width=109, height=35, alt='cadus crewing')

                     //- Template Body
                     tr: td(valign='top')#body
                        table(border=0, cellpadding=0, cellspacing=0, width='100%')
                           tr
                              td(valign='top')#content
                                 block content
